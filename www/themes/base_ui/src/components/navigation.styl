Height = 50px

header
  img
    height 35px
    vertical-align: middle
  .region
    #main-navigation
      overflow auto

header
  position relative
  #block-mainnavigation.main-menu.desktop-menu
    position: absolute
    z-index 1
    right 0
    &[dropdown-active="1"]
      z-index 2
    > ul
      // display table
      > li
        // display table-cell
        display inline
        padding 0 10px
        &:last-child
          padding-right 0

nav
  ul
    li
      a
        &:hover
          // border-bottom 1px solid black
          // text-decoration: underline

  &.dropdown-menu
    text-align: right
    > ul
      position relative
      > li
        text-align: right
        position relative
        > ul
          // background COLOR_WHITE
          display none
          position: absolute;
          right 0
          min-width: 200px;
          z-index: 1;
          max-height 0
          padding 0
          opacity 0
          transition: max-height 2000ms ease-out
          padding: 13px 12px 13px 0px
          > li
            padding 3px 2px 3px 0
          &.submenu-open
            opacity 1
            max-height: 500px
            display: block;
