main
  // padding 15px 15px 0 15px
  margin-top 80px
  // > *
  //   > *
  //     padding-bottom 15px
  .block
    > .field
      margin-bottom 20px

  article
    > div
      > .field
        margin-bottom 20px
        clear both
      > .field
      h1
        +above(3)
          width 50%
      .field--type-image
      .field--name-field-images
      .field--type-entity-reference-revisions
        width 100%
      .field--name-field-images.field--type-entity-reference-revisions
        > .field__items > .field__item
          padding-bottom 60px
          float left
          clear both
          // overflow: auto
          +above(3)
            .field--name-field-image
              lost-column 3/4
              .field__item
                margin-bottom unset
            .field--name-field-caption
              lost-column 1/4


    // Exhibition content page
    &.content-type-exhibition
      h1
        margin 30px 0 23px 0
      .field--name-field-images > .field__items
      .field--name-field-images.field__items
        margin-top 40px
        lost-masonry-wrap: no-flex;
        > .field__item
          lost-masonry-column 1/2
          // margin-bottom 20px
          // lost-column 1/2
          // width 50%

    // Artists content page
    &.content-type-artist
      > div
        h1
        #page-tabs__tab-labels
          lost-column 1/2
        #page-tabs
          padding-top 50px
          +above(3)
            padding-top 100px

  // main
  .text-formatted
    margin-bottom 60px
    h2
    h3
      margin 0
      + p
        // margin-top 3px
    blockquote
      padding 0 20px 20px 20px !important
      margin 0
      display block
      clear both
      overflow: auto
      p
        // font-style: italic
        font-weight: 300
        margin 0 !important
        // padding 0 !important
        padding 0 20px !important
        letter-spacing: 1px
        &:last-child
          float right
          margin-right -20px !important
          margin-top 15px !important
          line-height: 0
          font-style: normal

        &:first-child
          // float none
          // text-align: center
    li
      line-height: 1.7rem
      // 'hanging'-indent like so ->
      text-indent: -30px;
      padding-left: 30px;




