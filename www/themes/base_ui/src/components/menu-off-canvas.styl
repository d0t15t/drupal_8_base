
#mobile-icon-link
  z-index 3
  position relative
  display block
  overflow auto
  height 30px
  width 30px
  float right
  img.burger-icon
    top 0
    right 0
    // margin 25px 25px 0 0
    margin 0
    position absolute
    display block
    cursor pointer
    height 25px
    width 25px
    z-index 3
    +above(3)
      display none

[menu-mobile]
  position absolute
  top 30px
  right 0
  z-index: 2
  &.menu-closed
    height 0
    max-height: 0
    overflow hidden

  > ul
    // top 0
    padding 0 25px 25px 10px
    clear both
    position relative
    display inline-block
    float right
    li
      display: block
      text-align: right
    > li
      margin-top 10px
      > a
        font-size 30px
        line-height: 35px
        &.is-active
          text-decoration: none
      > ul
        > li
          > a
            font-size 22px
            line-height: 30px

// this element is used to 'canvas' the page content when the off-canvas menu is active.
#menu-canvas
  position fixed
  top 0
  left 0
  height: 100%
  width: 100%
  z-index 1
  z-index -1
  background-color rgba(white, 0.95);
  opacity 0
  display none;
  transition all 500ms ease-out
  &.active
    opacity 0.9
    display block
    z-index: 1

// Custom hidding 'all exhibitions link'
[menu-mobile]
  [title="See a list of all exhibitions"]
  [href="#ignore"]
    display none
[menu-desktop]
  // [data-drupal-link-system-path="artists"]
  //   display none
  [title="See a list of all exhibitions"]
    display unset
