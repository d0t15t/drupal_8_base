
body
  header
  footer
  main
    form
      .form-item
        margin-top 0
        .button
          border-radius 7px
          padding 3px 10px
          &:hover
            background-color lighten(COLOR_GREY, 80%)
        input
          &:not([type="checkbox"])
            width 100%


// Reset
input
textarea
  background: unset
  border 1px solid COLOR_BLACK
  padding-left 5px
  transition background 200ms ease-out
  &:focus
    outline unset
    background rgba(white, 80%)
input
  height 35px
  &.button
    padding 0
    margin 0
    border unset
    text-decoration: underline
    transition all 100ms ease-out
    &:hover
      color COLOR_GREY_DARK
      text-decoration: none



#contact-message-feedback-form
  // Hide required *'s in this form.
  label.form-required
    &:after
      display none