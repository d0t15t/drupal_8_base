*
  box-sizing: border-box

html
body
body > div {
  height: 100%;
}
body > div {
  display: flex;
  flex-direction: column;
}
.layout-container {
  flex: 1 0 auto;
}
footer {
  flex-shrink: 0;
}

.layout-container
footer
  margin 20px 25px
